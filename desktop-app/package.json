{
  "name": "asp-anagrafica-front-desktop",
  "version": "1.0.4",
  "description": "ASP Messina - Anagrafica Assistiti Desktop",
  "author": "ASP Messina",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "dependencies": {
    "express": "^4.21.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.0"
  },
  "build": {
    "appId": "it.messina.asp.anagrafica",
    "productName": "ASP Anagrafica",
    "artifactName": "ASP-Anagrafica-${version}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "wsServer.js",
      "updater.js",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.medical",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "deduzzo",
      "repo": "asp-anagrafica-front"
    }
  }
}
